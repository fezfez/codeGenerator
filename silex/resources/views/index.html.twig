{% extends 'layout.html.twig' %}
{% set active = 'homepage' %}

{% block content %}

    {% raw %}
         <div class="col-md-3 full-height" id="questions">
            <h2>Questions</h2>
	            	<span class="tools pull-right">
	            		Autoreload <input type="checkbox" ng-model="autoreload" value="true" />
	            		<i ng-if="generators != undefined" ng-click="handleGenerator(generators)" class="reload fa fa-refresh"></i>
	            	</span>
                <div>
                <div class="form-group" ng-repeat="questions in questionsList">
                    <label for="{{ name.dtoAttribute }}">{{ questions.text }}</label>
                    <input ng-if="questions.type == undefined"
                           ng-blur="autoreload ? handleGenerator(generators) : ''"
                           id="{{ questions.dtoAttribute }}"
                           class="form-control questions"
                           type="text"
                           name="{{ questions.dtoAttribute }}"
                           value="{{ (questions.value) ? questions.value : questions.defaultResponse }}"
                           placeholder="{{ questions.text }}" />
                    <select ng-if="questions.type == 'select'"
                            id="{{ questions.dtoAttribute }}"
                            class="form-control questions"
                            name="{{ questions.dtoAttribute }}"
                            >
                            <option selected="selected" value="{{ questions.value }}">{{ questions.placeholder }}</option>
                            <option ng-repeat="value in questions.values" ng-click="handleGenerator(generators)" value="{{ value.id }}">{{ value.label }}</option>
                    </select>
                </div>
                </div>
        </div>
        <div id="files" class="col-md-9 full-height">
            <h2>File list</h2>
            <ul ng-include="'assets/js/App/Template/file.html'">
            </ul>
        </div>
    {% endraw %}
{% endblock %}