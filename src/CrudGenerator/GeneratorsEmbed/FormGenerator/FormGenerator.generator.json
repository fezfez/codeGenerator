{
  "name": "FormGenerator",
  "definition": "Generate Form",
  "dto": "CrudGenerator\\GeneratorsEmbed\\FormGenerator\\Form",
   "metadataTypeAccepted": [
     "CrudGenerator\\MetaData\\DataObject\\MetaData"
  ],
  "questions": [
    {
      "dtoAttribute": "FormDirectory",
      "text": "Chose the form directory",
      "type": "directory"
    },
    {
      "dependencyCondition": [
        {
          "ArchitectGenerator == undefined": [
            {
              "dtoAttribute": "Namespace",
              "text": "Choose a target namespace"
            },
            {
              "dtoAttribute": "ModelName",
              "text": "Choose a model name",
              "defaultResponse": "{{ formGenerator.getMetadata().getName()|capitalize }}"
            },
            {
              "type": "askCollection",
              "collection": "$formGenerator->getMetadata()->getColumnCollection()",
              "text": "Attribute name for \"%s\", $iteration->getName()",
              "origine": "$iteration->getName()",
              "dtoAttribute": "AttributeName",
              "responseType": "text",
              "defaultResponse": "$iteration->getName()"
            }
          ]
        }
      ]
    }
  ],
  "directories": [
    "{{ formGenerator.getFormDirectory() }}"
  ],
  "templateVariables": [
    {
      "dependencyCondition": [
        {
          "ArchitectGenerator == undefined": [
            {
              "ucFirstModelName": "{{ formGenerator.getModelName()|capitalize }}"
            },
            {
              "dataObjectName": "{{ ucFirstModelName }}DataObject"
            },
            {
              "dtoNamespace": "{{ formGenerator.getNamespace() }}\\Form\\{{ dataObjectName }}"
            }
          ]
        }
      ]
    }
  ],
  "filesList": [
    {
      "/form/FormFactory.phtml": "{{ formGenerator.getFormDirectory() ~ ucFirstModelName }}FormFactory.php"
    },
    {
      "/form/AbstractForm.phtml": "{{ formGenerator.getFormDirectory() ~ 'Abstract' ~ ucFirstModelName }}Form.php"
    },
    {
      "/form/Form.phtml": "{{ formGenerator.getFormDirectory() ~ ucFirstModelName }}Form.php"
    },
    {
      "/form/FormFilter.phtml": "{{ formGenerator.getFormDirectory() ~ ucFirstModelName }}FormFilter.php"
    },
    {
      "dependencyCondition": [
        {
          "ArchitectGenerator == undefined": [
            {
              "/form/DataObject.phtml": "{{ formGenerator.getFormDirectory() ~ ucFirstModelName }}DataObject.php"
            }
          ]
        }
      ]
    }
  ]
}