    public function newAction()
    {
        $sm = $this->getServiceLocator();
        $headTitle = $sm->get('viewHelperManager')->get('headTitle');
        $headTitle->append("Create <?php echo $this->dataObject->getEntityName(); ?>");

        $<?php echo $this->dataObject->getEntityName(); ?>Form = <?php echo $this->dataObject->getEntityName(); ?>FormFactory::getInstance($sm);
        $<?php echo $this->dataObject->getEntityName(); ?>DAO  = <?php echo $this->dataObject->getEntityName(); ?>DAOFactory::getInstance($sm);
        $datas          = $this->getRequest()->getPost()->toArray();

        if($this->getRequest()->isPost() && $<?php echo $this->dataObject->getEntityName(); ?>Form->isValid($datas)) {
            $<?php echo $this->dataObject->getEntityName(); ?>DAO->create($<?php echo $this->dataObject->getEntityName(); ?>Form->getDTO());

            $this->flashMessenger()->addMessage('<?php echo $this->dataObject->getEntityName(); ?> created');

            return $this->redirect()->toRoute('<?php echo $this->dataObject->getEntityName(); ?>');
        }

        return new ViewModel(array(
            'form' => $<?php echo $this->dataObject->getEntityName(); ?>Form
        ));
    }